<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576BFE">

    <!-- 상단 곡선 배경 이미지 -->
    <ImageView
        android:id="@+id/rectangle6"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle6" />

    <!-- 중앙 곡선 배경 이미지 -->
    <ImageView
        android:id="@+id/rectangle5"
        android:layout_width="wrap_content"
        android:layout_height="710dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="-3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle5" />

    <!-- 하단 곡선 배경 이미지 -->
    <ImageView
        android:id="@+id/rectangle7"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle7" />

    <!-- 타이틀 텍스트 -->
    <TextView
        android:id="@+id/title_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/title_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="아이디"
        android:background="@drawable/rounded_box"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="비밀번호"
        android:background="@drawable/rounded_box"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_box"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 회원가입 버튼 -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_box"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 카카오 로그인 버튼 -->
    <ImageButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="228dp"
        android:layout_height="61dp"
        android:layout_below="@id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/kakao_login_button"
        android:scaleType="fitCenter" />

</RelativeLayout>
