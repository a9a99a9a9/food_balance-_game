<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576BFE">

    <!-- 상단 곡선 배경 이미지 -->

    <!-- 중앙 곡선 배경 이미지 -->

    <!-- 하단 곡선 배경 이미지 -->

    <!-- 회원가입 타이틀 -->

    <ImageView
        android:id="@+id/rectangle6"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="-5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle6" />

    <ImageView
        android:id="@+id/rectangle5"
        android:layout_width="wrap_content"
        android:layout_height="710dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-24dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle5" />

    <ImageView
        android:id="@+id/rectangle7"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="33dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle7" />

    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="회원가입"
        android:textColor="@color/deep_blue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/et_register_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/title_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="아이디"
        android:background="@drawable/rounded_box"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="비밀번호"
        android:background="@drawable/rounded_box"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- 닉네임 입력 -->
    <EditText
        android:id="@+id/et_register_nickname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="닉네임"
        android:background="@drawable/rounded_box"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- 회원가입 완료 버튼 -->
    <Button
        android:id="@+id/btn_register_complete"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_box"
        android:text="회원가입 완료"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
